<% if signed_in? %>
  <div id="postarea" style="height:200px;border:1px solid #428bca;padding:0 10px;overflow:hidden;">
  </div>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %> 
    </div>
  </div>
<% else %>
  <h1>StaticPages#home</h1>
  <p>Find me in app/views/static_pages/home.html.erb</p>
<% end %>
