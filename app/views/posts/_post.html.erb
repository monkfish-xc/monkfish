<li>
  <span class="content">
   <%= link_to post.title, prepend_url(post.content), :target => '_blank' %>
  </span>
  <span class="author">
    Posted by <%= @user.name %>
  </span>
  <% if current_user?(post.user) %>
    <%= link_to "delete", post, method: :delete,
                                data: { confirm: "Are you sure?" },
                                title: post.content %>
  <% end %>
</li>