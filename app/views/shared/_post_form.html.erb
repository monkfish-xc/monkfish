<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.text_area :content, placeholder: "URL" %>
  	<%= f.text_area :title, placeholder: "Title" %>
    <%= f.text_area :leading_comment, placeholder: "Your thoughts?" %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>