<li id="<%= feed_item.id %>" class="feed-item">
  <span class="content">
  	<%= link_to feed_item.title, post_path(feed_item), remote: true %>
  </span>
  <span class="timestamp">
    <small>Posted <%= time_ago_in_words(feed_item.created_at) %> ago by <%= link_to feed_item.user.name, feed_item.user %></small>
  </span>
  <small>
    <% if current_user?(feed_item.user) %>
      <%= link_to "delete", feed_item, method: :delete,
                                       data: { confirm: "Are you sure?" },
                                       title: feed_item.content %>
    <% end %>
  </small>
</li>